<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.austin.harrypotterrev2.CoverPage">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HarryPotter"
        android:textColor="#B8860B"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:textSize="112sp"
        android:onClick="whenHPClicked"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Movies"
        android:textColor="#B8860B"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textSize="50sp"
        android:id="@+id/mvoies"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:onClick="whenClickedMovies"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/movie1"
        android:background="@drawable/hpv1sor"
        android:layout_alignTop="@+id/mvoies"
        android:layout_alignLeft="@+id/book1"
        android:layout_alignStart="@+id/book1"
        android:onClick="whenClickedMovies"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Books"
        android:id="@+id/books"
        android:textColor="#B8860B"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textSize="50sp"
        android:layout_below="@+id/movie1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="whenClickedBooks" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/book1"
        android:background="@drawable/book1hp"
        android:layout_below="@+id/movie1"
        android:layout_alignRight="@+id/quotes1"
        android:layout_alignEnd="@+id/quotes1"
        android:onClick="whenClickedBooks"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Quotes"
        android:id="@+id/quotes"
        android:textColor="#B8860B"
        android:shadowColor="#000000"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textSize="50sp"
        android:onClick="whenClickedQuotes"
        android:layout_below="@+id/book1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:id="@+id/quotes1"
        android:background="@drawable/smiles2"
        android:layout_alignTop="@+id/quotes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="whenClickedQuotes"/>
</RelativeLayout>
