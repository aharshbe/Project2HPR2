<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dumbledorebackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.harrypotterrev2.quoteDescription">

    <TextView
        android:id="@+id/textduble"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="clickingdumbledore"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Dumbledore"
        android:textColor="#B8860B"
        android:textSize="99sp" />

    <ImageView
        android:id="@+id/imagequotedumbl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textduble"
        android:background="@drawable/dumbledore2"
        android:onClick="clickingdumbledore" />


    <ImageView
        android:id="@+id/imagequotedumb2"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_above="@+id/dumblquote2"
        android:layout_alignEnd="@+id/dumblquote1"
        android:layout_alignRight="@+id/dumblquote1"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/dumbledore3"
        android:onClick="clickingdumbledore" />

    <TextView
        android:id="@+id/dumblquote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagequotedumbl"
        android:fontFamily="cursive"
        android:text="'Words are, in my not-so-humble opinion, our most inexhaustible source of magic. Capable of both inflicting injury, and remedying it.' — Harry Potter and the Deathly Hallows"
        android:textColor="#00008B"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dumblquote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:text="'Happiness can be found, even in the darkest of times, if one only remembers to turn on the light.' — Harry Potter and the Prisoner of Azkaban"
        android:textColor="#4B0082" />

</RelativeLayout>
